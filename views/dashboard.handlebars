<div class="container">
  <h1 id="authorIDspot">Welcome back, @{{username}}</h1>
  <p>Your Posts:</p>
  <br>
  {{#each blogs}}
  <li>
    <a href="/blogs/{{id}}">{{title}}</a>
    <button name="{{id}}" class="editPostButton">Edit</button>
    <button name="{{id}}" class="deletePostButton">Delete</button>
  </li>
  {{/each}}
</div>

<div class="container" id="editBlogPost" style="display: none">
  <h2>Edit Post</h2>
  <input id="editBlogTitle">
  <textarea id="editBlogText"></textarea>
  <button class="submitEdit">Submit</button>
  <button id="cancelEdit">Cancel</button>
</div>

<button id="addPost">Create New Entry</button>
<div class="container" id="createBlogPost" style="display: none">
  <h2>Create New Post</h2>
  <input id="newBlogTitle" placeholder="Title">
  <textarea id="newBlogText" placeholder="Tell them how you feel"></textarea>
  <button id="blogSubmit">Submit</button>
</div>
<script src="js/dashboard.js"></script>