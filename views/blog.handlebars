<div class="blogContainer">
  <h2 id="blogTitle">{{blog.dataValues.title}}</h2>
  <p id="blogAuthor">@{{blog.dataValues.author}}</p>
  {{formatDate blog.dataValues.createdAt}}
  <p id="blogText">{{blog.dataValues.text}}</p>
</div>
{{#if loggedIn}}
<div class="addComment">
  <p id="commentingAs">Commenting as @{{userData.dataValues.username}}</p>
  <textarea id="commentTextArea" type="text" style="width: 200px; height: 80px; align-items: flex-start" placeholder="What do you think?" maxlength="50"></textarea>
  <button id="submitComment">Submit</button>
</div>
  <script src="/js/addComment.js"></script>
{{else}}
<a href="/login">Login to add a Comment</a>
{{/if}}
{{#each comments}}
<div class="existingComments">
  <p style="font-weight:bold">@{{this.dataValues.author}}</p>
  <p>{{formatDate this.dataValues.createdAt}}</p>
  <p style="margin-top: 15px">{{this.dataValues.content}}</p>
  
</div>
{{/each}}